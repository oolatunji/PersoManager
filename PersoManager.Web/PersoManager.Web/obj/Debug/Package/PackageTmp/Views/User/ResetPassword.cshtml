@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Retrieve Password</title>
    @Styles.Render("~/Content/logincss")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/common_libraries")
    @Scripts.Render("~/bundles/resetpassword")
</head>
<body>
    <section class="container">
        <div class="login">
            <h1>Perso Application</h1>
            <form id="demo-form" data-parsley-validate="">
                <p>
                    <input type="password" placeholder="New Password" autofocus="" id="newPassword" required="">
                </p>
                <p>
                    <input type="password" class="form-control" placeholder="Confirm Password" autofocus="" id="confirmPassword" required="">
                </p>
                <p>
                </p>
                <p class="submit">
                    <input type="button" id="addbtn" onclick="resetPassword()" value="Reset" />
                </p>
                <p>
                    <hr>
                </p>
            </form>
        </div>
    </section>
</body>
</html>

