@{
    ViewBag.Title = "Add Card Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/addcardprofile")
<aside class="content-wrapper sidebarLeft">
    <div class="content container-fluid sidebarRight animated fadeInUp">
        <div class="row">

            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-body content-title-container">
                        <div class="right">
                            <ol class="breadcrumb breadcrumb-theme breadcrumb-sm breadcrumb-green">
                                <li><a href="~/Home/Dashboard">Dashboard</a></li>
                                <li><a>Card Profile Management</a></li>
                                <li class="active"><a>Add Card Profile</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="color:green"><i class="fa fa-plus-circle"></i> Add Card Profile</h3>
                    </div>
                    <div class="panel-body">
                        <form id="demo-form" data-parsley-validate="">
                            <div id="form-validation" class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Enter card profile name" name="name" id="name" autofocus="" required="" data-parsley-required-message="Please enter card profile name" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Card Type</label>
                                    <div class="col-sm-10">
                                        <select class="form-control" id="cardType" required="" data-parsley-required-message="Please select card type">
                                            <option value="">Select Card Type</option>
                                            <option value="VISA">VISA</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Card Bin</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" placeholder="Enter Card BIN" name="bin" id="bin" required="" data-parsley-required-message="Please enter a valid number" data-parsley-type="integer" data-parsley-min="1" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Card Expiry Duration (months)</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" placeholder="Enter card expiry duration" name="ceduration" id="ceduration" required="" data-parsley-required-message="Please enter a valid number" data-parsley-type="integer" data-parsley-min="1" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="button" id="addBtn" class="btn btn-green" style="float:right;" onclick="addCardProfile()">Add</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</aside>






