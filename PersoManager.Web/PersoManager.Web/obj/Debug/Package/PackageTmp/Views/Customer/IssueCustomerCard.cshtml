
@{
    ViewBag.Title = "Issue Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/issuecustomercard")
<aside class="content-wrapper sidebarLeft">
    <div class="content container-fluid sidebarRight animated fadeInUp">
        <div class="row">

            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-body content-title-container">
                        <div class="right">
                            <ol class="breadcrumb breadcrumb-theme breadcrumb-sm breadcrumb-blue">
                                <li><a href="~/Home/Dashboard">Dashboard</a></li>
                                <li><a>EMV Instant Card Issuance</a></li>
                                <li class="active"><a>Request Card</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="color:blue"><i class="fa fa-credit-card"></i> Request Card</h3>
                    </div>
                    <div class="panel-body">
                        <form id="demo-form" data-parsley-validate="">
                            <div id="form-validation" class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Account Number</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Enter Phone Number" name="accountNumber" id="accountNumber" required="" data-parsley-required-message="Please enter account number" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Card Profile</label>
                                    <div class="col-sm-10">
                                        <select class="form-control" id="cardProfile" required="" data-parsley-required-message="Please select card profile"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="button" id="addBtn" class="btn btn-blue" style="float:right;" onclick="issuecard()">Request Card</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</aside>







