
@{
    ViewBag.Title = "UpdateCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/updatecustomer")
<aside class="content-wrapper sidebarLeft">
    <div class="content container-fluid sidebarRight animated fadeInUp">
        <div class="row">

            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-body content-title-container">
                        <div class="right">
                            <ol class="breadcrumb breadcrumb-theme breadcrumb-sm breadcrumb-blue">
                                <li><a href="~/Home/Dashboard">Dashboard</a></li>
                                <li><a>Customer Management</a></li>
                                <li class="active"><a>Update Customer</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="color:blue"><i class="fa fa-edit"></i> Update Customer</h3>
                    </div>
                    <div class="panel-body">
                        <form id="demo-form" data-parsley-validate="">
                            <div id="form-validation" class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Lastname</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Enter Lastname" name="lastname" id="lastname" autofocus="" required="" data-parsley-required-message="Please enter lastname" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Othernames</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Enter Othernames" name="othernames" id="othernames" required="" data-parsley-required-message="Please enter other names" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="button" id="updateBtn" class="btn btn-blue" style="float:right;" onclick="updateCustomer()">Update</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="panel-footer" style="text-align:right">
                        <a href="../Customer/ViewCustomer" title="View Customers" style="color:blue;font-weight:bold;"><i class="fa fa-mail-reply-all"></i> View Customers</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</aside>








